<h2>Step 2</h2>

<%= simple_form_for@organization do |f| %>
<!--   <%= f.error_notification %> -->

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :registration,
                required: true,
                hint: ('Business ID '),
                input_html: { autocomplete: "registration" } %>
    <%= f.input :url,
                input_html: { autocomplete: "org-url" } %>
    <%= f.input :category,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "category" }%>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit" %>

  </div>
<% end %>
