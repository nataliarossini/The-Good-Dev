<div class="page-form">
  <h2>About Your Organization</h2>
  <div class="container">
    <%= simple_form_for@organization do |f| %>
    <!--   <%= f.error_notification %> -->
    
      <div class="form-inputs">
        <%= f.input :user_type, :as => :hidden, :input_html => { :value => :organization } %>
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :registration,
                    required: true,
                    hint: ('Business ID '),
                    input_html: { autocomplete: "registration" } %>
        <%= f.input :url,
                    input_html: { autocomplete: "org-url" } %>
        <%= f.input :category,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "category" }%>
    
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Submit", :class => "main-btn" %>
      </div>
    <% end %>
  </div>
</div>