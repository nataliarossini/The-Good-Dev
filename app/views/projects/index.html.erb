
<div class="container-cards">
  <% @projects.each do |project| %>
    <%= link_to project_path(project) do %>
      <div class="card-project" >
        <div class="cell">
          <h3> <i class="fas fa-map-pin"></i> <%= project.location %> </h3>
        </div>
        <div class="cell">
          <h3> <%= project.title %> </h3>
          <p> <%= project.description %> <p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>