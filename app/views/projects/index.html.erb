<div class= "container-main">
  <div class="holder">
    <h1> Projcts Available </h1>
    <div class="filter-bar">
      <P>!!!Locate our filter here!!! </p>
    </div>
    <div class="container-cards">
      <% @projects.each do |project| %>
        <%= link_to project_path(project), :class => "card-project" do %>
          <div class="cell">
            <h3> <i class="fas fa-map-pin"></i> <%= project.location %> </h3>
          </div>
          <div class="cell">
            <h3> <%= project.title %> </h3>
            <p> <%= project.description %> <p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="container-sidebar">
    <div class="container-news">
    </div>
    <div class="container-reviews">
      <% @reviews.reverse[0..2].each do |review| %>
        <div class="card-review">
          <div class="review-avatar">
          <% reviewer = User.find(review.author_id) %>
            <% if reviewer.photo.attached? %>
              <%= cl_image_path reviewer.photo.key %>
              <p> <%= reviewer.organization? ?  reviewer.organization.name : "#{reviewer.first_name.capitalize}" %> </p>
            <% else %>
              <%= image_tag "default-avt.png" %>
              <p> <%= reviewer.organization? ?  reviewer.organization.name : "#{reviewer.first_name.capitalize}" %> </p>
              <p> <%= reviewer.organization? ?  "Host" : "Volunteer" %> </p>
            <% end %>

          </div>
          <div class="review-content">
            <p><em>"<%= review.content %>"</em>  </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>