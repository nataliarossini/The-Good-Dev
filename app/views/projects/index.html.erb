<div class="container-cards">
      <% @projects.reverse.first(3).each do |project| %>
        <%= link_to project_path(project) do %>
          <div class="card-project" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path project.photos.first.key unless project.photos.nil? %>');">
            <div class="cell">
              <p><i class="fas fa-map-pin"></i> <%= project.location %> </p>
            </div>
            <div class="cell">
              <h3> <%= project.title %> </h3>
              <p> <%= project.description %> <p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
