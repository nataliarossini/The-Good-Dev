<%= @project.title %>
<%= @project.description %>
<%= @project.details %>
<%= @project.location %>
<%= @project.start_date %>
<%= @project.end_date %>

<% if @project.organization.user_id == current_user.id %>
  <%= link_to "Update the Project", edit_project_path(@project), class: 'btn-success' %>
  <%= link_to "Remove this Project", project_path(@project), method: :delete, class: 'btn-danger' %>
<% else %>
  <%= link_to "Leave a review for the Organization", new_project_review_path(@project), class: 'btn-primary' %>
<% end %>

<%= link_to "Back to Projects", projects_path, class: 'btn-primary' %>
