<div class="page-form">
  <h2>Sign up as Organization</h2>
  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name, partial: :organization)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :user_type, :as => :hidden, :input_html => { :value => :organization } %>
        <div class="division">
          <%= f.input :first_name,
                      label: "Name",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "First Name" }%>
          <%= f.input :last_name,
                      label: "Surname",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Last Name" }%>
        </div>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <div class="division">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <%= f.input :address,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Address" }%>
        <%= f.input :description,
                    label: "About you",
                    placeholder: "Tell us about yoruself",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "Tell us about yourself" }%>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Sign up", :class => "main-btn" %>
      </div>
    <% end %>
    <%# render "devise/shared/links" %>
  </div>
</div>