<div class="page-form">
  <h2>You are applying for <em><%= @project.title %><em> </h2>
  <div class="container">
    <%= simple_form_for [@project, @application] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :motivation_letter, label: "Your Motivation" %>
        <%= f.input :resume, as: :file, input_html: { multiple: true } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Submit", :class => "main-btn" %>
      </div>
    <% end %>
    <%= link_to "Cancel", project_path(@project), class: "main-btn button-cancel" %>
  </div>
</div>
